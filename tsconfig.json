{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "moduleResolution": "node",
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
